<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MakePlayer"
        android:background="@drawable/gradient_background">

    <ImageButton
            android:id="@+id/changeProfilePicture"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/whale"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.184"
            app:layout_constraintHorizontal_bias="0.497" />

    <EditText
            android:id="@+id/editTextLogin"
            android:layout_width="290dp"
            android:layout_height="44dp"
            android:background="@drawable/white_rectangle_rounded"
            android:hint="Nazwa"
            android:inputType="text"
            android:maxLines="1"
            android:textColorHint="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.553" />

    <TextView
            android:id="@+id/registerNow"
            android:text="Naciśnij na zdjęcie, aby wylosować nowe"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_width="254dp"
            android:layout_height="66dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintVertical_bias="0.451" />

    <androidx.appcompat.widget.AppCompatButton
            android:text="Potwierdź"
            android:layout_width="157dp"
            android:layout_height="42dp"
            android:id="@+id/button_submit"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@drawable/btn_draw"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.682" />

</androidx.constraintlayout.widget.ConstraintLayout>